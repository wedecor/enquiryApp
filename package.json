{
  "name": "wedecor-firestore-seeder",
  "private": true,
  "type": "module",
  "scripts": {
    "seed": "tsx scripts/seedFirestore.ts",
    "verify-seed": "tsx scripts/verifySeed.ts",
    "typecheck": "tsc --noEmit",
    "check-workflow": "tsx scripts/checkWorkflow.ts",
    "gh-run-seed": "gh workflow run 'Seed Firestore (WeDecor)' -f admin_uid=$ADMIN_UID && gh run watch",
    "admin-uid": "tsx scripts/getOrCreateAdminUid.ts",
    "seed:local": "bash scripts/run_local_seed.sh",
    "setup:apis": "bash scripts/setup/enable_apis.sh",
    "setup:firestore": "bash scripts/setup/create_firestore_db.sh",
    "setup:service-account": "bash scripts/01_create_service_account_and_key.sh",
    "seed:docker": "bash scripts/03_seed_docker.sh",
    "smoke:notify": "node scripts/smoke_notify.mjs",
    "sec:scan": "tsx scripts/security/exposure_scan.ts",
    "sec:rules": "tsx scripts/security/check_rules.ts",
    "sec:logs": "tsx scripts/security/check_logs.ts",
    "sec:all": "tsx scripts/security/run_audit.ts",
    "migrate:tokens": "tsx scripts/migrations/move_tokens_private.ts",
    "refactor:secrets": "tsx scripts/refactors/replace_secrets.ts",
    "refactor:logs": "tsx scripts/refactors/replace_risky_logs.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "dotenv": "^17.2.2",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "picocolors": "^1.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "firebase": "^12.2.1",
    "firebase-admin": "^12.7.0",
    "zod": "^3.23.8"
  }
}
