{
  "name": "wedecor-firestore-seeder",
  "private": true,
  "type": "module",
  "scripts": {
    "seed": "tsx scripts/seedFirestore.ts",
    "verify-seed": "tsx scripts/verifySeed.ts",
    "typecheck": "tsc --noEmit",
    "check-workflow": "tsx scripts/checkWorkflow.ts",
    "gh-run-seed": "gh workflow run 'Seed Firestore (WeDecor)' -f admin_uid=$ADMIN_UID && gh run watch",
    "setup:apis": "bash scripts/setup/enable_apis.sh",
    "setup:firestore": "bash scripts/setup/create_firestore_db.sh",
    "setup:service-account": "bash scripts/01_create_service_account_and_key.sh",
    "seed:local": "bash scripts/02_seed_local.sh",
    "seed:docker": "bash scripts/03_seed_docker.sh"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "firebase": "^12.2.1",
    "firebase-admin": "^12.7.0",
    "zod": "^3.23.8"
  }
}
