{
  "name": "wedecor-firestore-seeder",
  "private": true,
  "type": "module",
  "volta": { "node": "20.12.2" },
  "scripts": {
    "seed": "tsx scripts/seedFirestore.ts",
    "verify-seed": "tsx scripts/verifySeed.ts",
    "typecheck": "tsc --noEmit",
    "check-workflow": "tsx scripts/checkWorkflow.ts",
    "gh-run-seed": "gh workflow run 'Seed Firestore (WeDecor)' -f admin_uid=$ADMIN_UID && gh run watch",
    "admin-uid": "tsx scripts/getOrCreateAdminUid.ts",
    "seed:local": "bash scripts/run_local_seed.sh",
    "setup:apis": "bash scripts/setup/enable_apis.sh",
    "setup:firestore": "bash scripts/setup/create_firestore_db.sh",
    "setup:service-account": "bash scripts/01_create_service_account_and_key.sh",
    "seed:docker": "bash scripts/03_seed_docker.sh",
    "smoke:notify": "node scripts/smoke_notify.mjs",
    "sec:scan": "tsx scripts/security/exposure_scan.ts",
    "sec:rules": "tsx scripts/security/check_rules.ts",
    "sec:logs": "tsx scripts/security/check_logs.ts",
    "sec:all": "tsx scripts/security/run_audit.ts",
    "migrate:tokens": "tsx scripts/migrations/move_tokens_private.ts",
    "refactor:secrets": "tsx scripts/refactors/replace_secrets.ts",
    "refactor:logs": "tsx scripts/refactors/replace_risky_logs.ts",
    "lint:dart": "flutter analyze",
    "lint:dart:fix": "dart fix --apply",
    "fmt:dart": "dart format -l 100 .",
    "polish": "npm run fmt:dart && npm run lint:dart:fix && flutter analyze",
    "release:tag": "git tag -a v1.0.0 -m 'WeDecor Enquiries v1.0.0' && git push origin v1.0.0",
    "deploy:functions": "cd functions && npm i && npm run build && firebase deploy --only functions && cd ..",
    "deploy:hosting": "flutter build web --release && firebase deploy --only hosting",
    "deploy:all": "npm run deploy:functions && npm run deploy:hosting",
    "fn:use": "nvm use 20 || true",
    "fn:clean": "cd functions && npm run clean && cd -",
    "fn:install": "cd functions && npm ci && cd -",
    "fn:build": "cd functions && npm run build && cd -",
    "fn:deploy": "cd functions && npm run deploy && cd -",
    "seed:statuses:dry": "DRY_RUN=1 ts-node --transpile-only scripts/populate_statuses.ts --path dropdowns/statuses/items --project wedecorenquries",
    "seed:statuses": "ts-node --transpile-only scripts/populate_statuses.ts --path dropdowns/statuses/items --project wedecorenquries",
    "seed:probe": "ts-node --transpile-only scripts/probe_firestore.ts --path dropdowns/statuses/items --project wedecorenquries",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "dotenv": "^17.2.2",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "picocolors": "^1.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "firebase": "^12.2.1",
    "firebase-admin": "^12.7.0",
    "zod": "^3.23.8"
  }
}
